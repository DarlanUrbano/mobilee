<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Refeições"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:layout_marginTop="100dp"
            />

        <EditText
            android:id="@+id/custoRefeicao"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Custo estimado por refeição"
            android:inputType="number"
            android:padding="10dp"
            android:layout_marginTop="50dp"/>
        <EditText
            android:id="@+id/refeicoesDia"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Refeições por dia"
            android:inputType="number"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Total:"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/adc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0047FB"
            android:text="Adicionar a viagem?"
            android:textAllCaps="false"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#B8002B"
            android:text="Pular"
            android:textAllCaps="false"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textAlignment="center"
            android:textColor="#ED0101"
            android:textSize="20sp"/>

    </LinearLayout>
</ScrollView>